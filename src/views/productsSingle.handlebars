<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<link rel="stylesheet" href="/css/{{style}}">
<div class="wrapper">
    {{#if result}}
        <div id="products">
            <div class="product" id="{{result._id}}">
                <h6>id: {{result._id}}</h6>
                <h3>{{result.name}}</h3>
                <h6>categoria: {{result.categ}}</h6>
                <p>{{result.desc}}</p>
                <span>${{result.price}}.00  stock disponible: {{result.stock}}u</span>
                <br>
            </div>
            <div id="addForm">
                <form action="" method="post" id="addCartForm">
                <h4>AÃ±adir al carrito</h4>
                        <input type="text" name="cart" id="" style="display: none;" value={{cartId}}>
                    <label for="post-id">id:</label>
                        <input type="text" name="id" id="post-id" readonly value={{result._id}}>
                    <label for="post-quantity">Cantidad:</label>
                        <input id="post-quantity" type="number" name="quantity" required>
                    {{#if userLogged}}
                    <button type="submit">Subir</button>
                    {{else}}
                    <button disabled>Inicia sesion para comprar</button>
                    {{/if}}
                </form>   
            </div>
        </div>
    </div>
{{else}}
    <h3>Producto no encontrado.</h3>
{{/if}}
</div>
<script>
    const mensaje = {{{alerta}}}
    if (mensaje) {
      Swal.fire(mensaje);
    }
</script>

<script type="module" src="/socket.io/socket.io.js"></script>
<script type="module" src="/js/addToCart.js"></script>